{
  "compilerOptions": {
    "target": "ES2015",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    // tambahkan  "rootDir": "./src",  
  "rootDir": "./src", 
    "paths": {
      "@/*": ["./*"]
    },
   // "ignoreDeprecations": "6.0"   // tambahkan untuk hilangkan warning
  },
  "include": ["src/**/*.ts"],
  // "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}
 
